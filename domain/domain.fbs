namespace MyDomain.flatbuf;

enum OrderSide : byte
{
    buy,
    sell
}

enum OrderType : byte
{
    market,
    limit,
    stop
}

table Order 
{
    uid : int;
    symbol : string;
    side : OrderSide;
    type : OrderType;
    price : double = 0.0;
    volume : double = 0.0;
}

table Balance 
{
    currency : string;
    amount : double = 0.0;
}

table Account
{
    uid : int;
    name : string;
    wallet : Balance;
    orders : [Order];
}

root_type Account;
